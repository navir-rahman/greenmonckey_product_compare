    {
      "type": "range",
      "id": "img_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Image Radius",
      "default": 0
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Section height",
      "options": [
        {
          "value": "auto",
          "label": "Original image ratio"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
